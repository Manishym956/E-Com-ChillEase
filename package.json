{
    "name": "chillease-ecommerce",
    "version": "1.0.0",
    "description": "E-commerce platform for fans and ACs",
    "scripts": {
      "dev:client": "cd apps/client && npm run dev",
      "dev:admin": "cd apps/admin && npm run dev",
      "dev:rider": "cd apps/rider-pwa && npm run dev",
      "dev:server": "cd apps/server && npm run dev",
      "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:admin\" \"npm run dev:rider\"",
      "build:client": "cd apps/client && npm run build",
      "build:admin": "cd apps/admin && npm run build",
      "build:rider": "cd apps/rider-pwa && npm run build",
      "build:server": "cd apps/server && npm run build",
      "build": "npm run build:server && npm run build:client && npm run build:admin && npm run build:rider"
    },
    "keywords": ["ecommerce", "fans", "AC", "air-conditioners"],
    "author": "",
    "license": "ISC",
    "devDependencies": {
      "concurrently": "^8.2.2"
    }
  }